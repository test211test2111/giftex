      }
      
      /* –ê–¥–∞–ø—Ç–∞—Ü–∏—è –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω */
      .modal-content {
        padding: 20px;
        width: 95%;
      }
      
      .win-gift-img {
