      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º —Ä—É–ª–µ—Ç–∫—É
      initRoulette();
      
      // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
      setTimeout(() => {
        if (rouletteItems) {
          rouletteItems.classList.add('roulette-items');
          rouletteItems.style.animationPlayState = 'running';
          
          // –ó–∞–ø—É—Å–∫–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é –¥–ª—è –ø–æ–¥—Å–≤–µ—Ç–∫–∏ —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
          highlightCenterItem();
          
          // –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–¥—Å–≤–µ—Ç–∫—É –ø—Ä–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–µ
          setInterval(highlightCenterItem, 200);
        }
      }, 500);
      
      // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–¥—Å–≤–µ—Ç–∫–∏ —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
      function highlightCenterItem() {
        if (!rouletteItems) return;
        
        // –£–¥–∞–ª—è–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–π –∫–ª–∞—Å—Å –ø–æ–¥—Å–≤–µ—Ç–∫–∏
        const currentHighlighted = rouletteItems.querySelector('.roulette-center-item');
        if (currentHighlighted) {
          currentHighlighted.classList.remove('roulette-center-item');
        }
        
        // –ù–∞—Ö–æ–¥–∏–º —ç–ª–µ–º–µ–Ω—Ç –≤ —Ü–µ–Ω—Ç—Ä–µ
        const rouletteRect = rouletteItems.getBoundingClientRect();
        const rouletteItemElements = rouletteItems.querySelectorAll('.roulette-item');
        const centerX = window.innerWidth / 2;
        
        let closestItem = null;
        let minDistance = Infinity;
        
        rouletteItemElements.forEach(item => {
          const rect = item.getBoundingClientRect();
          const itemCenterX = rect.left + rect.width / 2;
          const distance = Math.abs(itemCenterX - centerX);
          
          if (distance < minDistance) {
            minDistance = distance;
            closestItem = item;
          }
        });
        
        // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –ø–æ–¥—Å–≤–µ—Ç–∫–∏
        if (closestItem) {
          closestItem.classList.add('roulette-center-item');
        }
      }
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –ª–µ–Ω—Ç—É –ø–æ–±–µ–¥–∏—Ç–µ–ª–µ–π
      initWinnersFeed();
      
      // –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫ –∫–Ω–æ–ø–∫–∞–º
      [spinButton, mobileSpinButton, bottomSpinButton].forEach(button => {
        if (button) {
          button.addEventListener('click', handleSpinClick);
        }
      });
      
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
      if (closeAuthModalButton && authModal) {
        closeAuthModalButton.addEventListener('click', () => {
          authModal.classList.remove('active');
        });
      }
      
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –≤—ã–∏–≥—Ä—ã—à–∞
      if (closeWinModalButton && winModal) {
        closeWinModalButton.addEventListener('click', () => {
          winModal.classList.remove('active');
          window.location.reload();
        });
      }
      
      // –ü–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª –∫ —Å–µ–∫—Ü–∏—è–º
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
          e.preventDefault();
          
          const targetId = this.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            window.scrollTo({
              top: targetElement.offsetTop - 80,
              behavior: 'smooth'
            });
          }
        });
      });
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤–∏–¥–∂–µ—Ç–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏ Telegram
      function initTelegramLoginWidget() {
        const container = document.getElementById('telegram-login-container');
        if (!container) return;
        
        const script = document.createElement('script');
        script.async = true;
        script.src = 'https://telegram.org/js/telegram-widget.js';
        script.setAttribute('data-telegram-login', '<%= process.env.TELEGRAM_BOT_USERNAME %>');
        script.setAttribute('data-size', 'large');
        script.setAttribute('data-radius', '8');
        script.setAttribute('data-request-access', 'write');
        script.setAttribute('data-userpic', 'true');
        script.setAttribute('data-auth-url', '/auth/telegram/callback');
        script.setAttribute('data-onauth', 'onTelegramAuth(user)');
        
        container.appendChild(script);
        
        // –§—É–Ω–∫—Ü–∏—è –æ–±—Ä–∞—Ç–Ω–æ–≥–æ –≤—ã–∑–æ–≤–∞
        window.onTelegramAuth = function(user) {
          fetch('/auth/telegram/callback', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(user)
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              window.location.href = data.redirectUrl;
            } else {
              showNotification('–û—à–∏–±–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏: ' + (data.error || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞'), 'error');
            }
          })
          .catch(error => {
            console.error('–û—à–∏–±–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏:', error);
            showNotification('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏', 'error');
          });
        };
      }
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –≤–∏–¥–∂–µ—Ç
      initTelegramLoginWidget();
      
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –≤–∫–ª—é—á–µ–Ω–∏—è/–≤—ã–∫–ª—é—á–µ–Ω–∏—è –∑–≤—É–∫–∞
      if (toggleSoundButton) {
        toggleSoundButton.addEventListener('click', () => {
          const isMuted = soundManager.toggleMute();
          soundIcon.textContent = isMuted ? 'üîá' : 'üîä';
          
          // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
          showNotification(isMuted ? '–ó–≤—É–∫ –≤—ã–∫–ª—é—á–µ–Ω' : '–ó–≤—É–∫ –≤–∫–ª—é—á–µ–Ω', isMuted ? 'info' : 'success');
        });
      }
      
      // –î–æ–±–∞–≤–∏–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ä–∞–∑–º–µ—Ä–∞ –æ–∫–Ω–∞ –¥–ª—è –∞–¥–∞–ø—Ç–∏–≤–Ω–æ–π —Ä—É–ª–µ—Ç–∫–∏
      let resizeTimeout;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(function() {
          // –û–±–Ω–æ–≤–ª—è–µ–º —Ä—É–ª–µ—Ç–∫—É –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ —Ä–∞–∑–º–µ—Ä–∞ –æ–∫–Ω–∞
          initRoulette();
        }, 300);
      });
    });
  </script>
